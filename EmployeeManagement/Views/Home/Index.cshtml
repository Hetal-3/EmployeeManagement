@model IEnumerable<Employee>

@{
  
    ViewBag.Title= "Employee list";
}

<div class="card-deck">
        @foreach (var employee in Model)
        {
            var photoPath = "~/Images/" + (employee.PhotoPath ?? "noimg.png");
            <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
                <div class="card-header">
                    <h3>@employee.Name</h3>
                </div>
                <img class="card-img-top imageThumbnail" src="@photoPath" style="height: 200px; width: auto;" asp-append-version="true">
                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="Details" asp-route-id ="@employee.Id" class="btn btn-primary">View</a>
                    @*@Html.ActionLink("View", "Details", "home", new { id = employee.Id })*@
                    @*<a href=@Url.Action("Details", "home",new { id=employee.Id}) class="btn btn-primary">Show</a>
                    <a href="/home/details/@employee.Id" class="btn btn-primary">View</a>*@
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
</div>
